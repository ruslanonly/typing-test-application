<Window x:Class="TypingTestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TypingTestApp"
        mc:Ignorable="d"
        Title="MainWindow" 
        PreviewKeyDown="KeyDownHandler"
        Height="500" 
        Width="800"
        MinWidth="900"
        MinHeight="500"
        FontSize="16"
        Background="#262e36"
        >
    <Grid x:Name="TestWrapper" 
          HorizontalAlignment="Center" 
          Width="900" 
          Height="500" 
          VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Name="TextWrapper"
              Grid.Row="1" 
              Grid.Column="1" 
              Grid.ColumnSpan="3">
            <Canvas x:Name="CaretArea"
                    Panel.ZIndex="3">
                <Rectangle 
                    x:Name="CaretBlock"
                    Fill="#3c60d6"
                    Width="3"
                    Height="30"
                    Canvas.Left="0"
                    Canvas.Top="0">
                </Rectangle>
            </Canvas>
            <WrapPanel Name="WordsBlock" 
                       Orientation="Horizontal"
                       Panel.ZIndex="1">
            </WrapPanel>
        </Grid>
        
        <StackPanel VerticalAlignment="Center" 
                    Cursor="Hand"
                    Background="Transparent"
                    HorizontalAlignment="Left" 
                    Grid.Row="2" Grid.Column="1">
            <Button x:Name="resetButton" Content="restart" Padding="5, 5, 5, 5" VerticalAlignment="Bottom"/>
        </StackPanel>
    </Grid>
</Window>

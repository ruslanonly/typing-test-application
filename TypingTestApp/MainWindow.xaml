<Window x:Class="TypingTestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TypingTestApp"
        mc:Ignorable="d"
        Title="MainWindow" 
        PreviewKeyDown="KeyDownHandler"
        Height="500" 
        Width="800"
        MinWidth="1000"
        MinHeight="600"
        FontSize="16"
        Background="#262e36">
    <Window.Resources>
        <Style x:Key="ResetButtonStyle" TargetType="Button">
            <Setter Property="Template" >
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="3" Background="{TemplateBinding Background}" >
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="StatStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="15"></Setter>
            <Setter Property="Foreground" Value="#829094"></Setter>
            <Setter Property="HorizontalAlignment" Value="Left"></Setter>
        </Style>                       
    </Window.Resources>
    <Grid x:Name="TestWrapper" HorizontalAlignment="Center" Width="1000" Height="600" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions >
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Name="TextWrapper" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Margin="0, 0, 0, 10">
            <Canvas x:Name="CaretArea" Panel.ZIndex="3">
                <Rectangle x:Name="CaretBlock" Fill="#3c60d6" Width="12" Height="3" Canvas.Left="0" Canvas.Top="0">
                </Rectangle>
            </Canvas>
            <WrapPanel Name="WordsBlock" Orientation="Horizontal" Panel.ZIndex="1">
            </WrapPanel>
        </Grid>

        <Grid VerticalAlignment="Center" Cursor="Hand" Background="Transparent" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Button x:Name="resetButton" Style="{StaticResource ResetButtonStyle}" Grid.Row="1" Grid.Column="1"
                    Margin="0, 0, 10, 0" Height="30" Width="40" Focusable="False" BorderThickness="0" 
                    BorderBrush="Transparent" Background="#2a323b" Click="ResetButtonClickHandler">
                <Canvas Background="Transparent" Width="24" Height="24">
                    <Path Fill="#404f5c" Data="M17.65 6.35C16.2 4.9 14.21 4 12 4c-4.42 0-7.99 3.58-7.99 8s3.57 8 7.99 8c3.73 0 6.84-2.55 7.73-6h-2.08c-.82 2.33-3.04 4-5.65 4-3.31 0-6-2.69-6-6s2.69-6 6-6c1.66 0 3.14.69 4.22 1.78L13 11h7V4l-2.35 2.35z"></Path>
                </Canvas>
            </Button>
            
        </Grid>
        <Grid x:Name="StatsBlock" Opacity="1" Grid.Row="0" Grid.Column="1" Margin="0,10,0,20" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" >
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Style="{StaticResource StatStyle}">wpm</TextBlock>
                <TextBlock x:Name="WPMValue" Grid.Row="1" Style="{StaticResource StatStyle}"></TextBlock>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Style="{StaticResource StatStyle}">cpm</TextBlock>
                <TextBlock x:Name="CPMValue" Grid.Row="1" Style="{StaticResource StatStyle}"></TextBlock>
            </Grid>
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Style="{StaticResource StatStyle}">accuracy</TextBlock>
                <TextBlock x:Name="AccuracyValue" Grid.Row="1" Style="{StaticResource StatStyle}"></TextBlock>
            </Grid>
        </Grid>
    </Grid>
</Window>
